{
    "name": "react-shuttle",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "npm run clean && pack build && npm run build:css",
        "build:css": "mkdirp pkg/styles && sass -s compressed --embed-source-map src/styles/** pkg/css/shuttle.css",
        "build:test": "npm run clean && tsc src/index.ts --pretty --jsx react --esModuleInterop --outDir pkg",
        "clean": "rimraf pkg/**"
    },
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg",
                {
                    "excludes": "playground/**"
                }
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "pika-plugin-legacy-browser",
                {
                    "name": "ReactShuttle",
                    "external": [
                        "react"
                    ],
                    "globals": {
                        "react": "React"
                    },
                    "sourcemap": true
                }
            ]
        ]
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/plugin-transform-destructuring": "^7.5.0",
        "@babel/plugin-transform-object-assign": "^7.2.0",
        "@babel/preset-react": "^7.0.0",
        "@djthoms/eslint-config": "^1.0.0",
        "@djthoms/prettier-config": "^1.0.0",
        "@pika/pack": "^0.4.0",
        "@pika/plugin-build-umd": "^0.4.0",
        "@pika/plugin-build-web": "^0.4.0",
        "@pika/plugin-copy-assets": "^0.4.0",
        "@pika/plugin-ts-standard-pkg": "^0.4.0",
        "@types/classnames": "^2.2.9",
        "@types/react": "^16.8.23",
        "@types/react-dom": "^16.8.5",
        "classnames": "^2.2.6",
        "concurrently": "^4.1.1",
        "core-js": "^3.1.4",
        "eslint": "^5.16.0",
        "mini-css-extract-plugin": "^0.8.0",
        "mkdirp": "^0.5.1",
        "pika-plugin-legacy-browser": "^1.0.1",
        "prettier": "^1.18.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
